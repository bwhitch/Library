@model Library.Web.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2>@Model.TotalBooks books to checkout</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Catalog" asp-controller="Catalog" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-cart"></i>
                &nbsp; Return to Catalog
            </a>
        </div>
    </div>
</div>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-primary"></h4>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="MemberId"></label>
            <input asp-for="MemberId" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="FirstName" ></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="LastName"></label> 
            <input asp-for="LastName" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Complete Checkout</button>
    </div>

    <table class="table table-bordered table-striped" style="width: 25%">
    <thead>
        <tr>
            <th>
                Title
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            
                    <tr>
                        <td width="40%">
                    @item.Book.Title
                        </td>
                    </tr>
        }

    </tbody>
</table>
</form>


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Search Catalog</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Author" ></label>
            <input asp-for="Author" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Year"></label> 
            <input asp-for="Year" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Search</button>
        <a asp-controller="Catalog" asp-action="Index" class="btn btn-secondary" style="width:150px">Catalog List</a>
    </div>
</form>

